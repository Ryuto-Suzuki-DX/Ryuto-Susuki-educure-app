<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jp.dataxeed.pm.mapper.StockMapper">

    <!--全取得-->
    <select id="findAll" resultType="com.jp.dataxeed.pm.entity.StockEntity">
        SELECT * FROM stock
    </select>

    <!--単体取得-->
    <select id="findById" parameterType="int" resultType="com.jp.dataxeed.pm.entity.StockEntity">
        SELECT * FROM stock WHERE id = #{id}
    </select>

    <!--追加-->
    <insert id="insertStock" parameterType="com.jp.dataxeed.pm.entity.StockEntity" useGeneratedKeys="true" keyProperty="id"> 
        INSERT INTO stock (product_id)
        VALUES (#{productId})
    </insert>

    <!--更新-->
    <update id="updateStockById" parameterType="com.jp.dataxeed.pm.entity.StockEntity">
        UPDATE stock SET product_id = #{productId},
                              updated_at = CURRENT_TIMESTAMP
                          WHERE id = #{id}
    </update>

    <!--削除-->
    <delete id="deleteStockById" parameterType="com.jp.dataxeed.pm.entity.StockEntity">
        DELETE FROM stock WHERE id = #{id}
    </delete>
</mapper>
