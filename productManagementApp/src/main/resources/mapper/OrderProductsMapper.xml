<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jp.dataxeed.pm.mapper.OrderProductsMapper">

    <!--全取得-->
    <select id="findAll" resultType="com.jp.dataxeed.pm.entity.OrderProductsEntity">
        SELECT * FROM order_products
    </select>

    <!--単体取得-->
    <select id="findById" parameterType="int" resultType="com.jp.dataxeed.pm.entity.OrderProductsEntity">
        SELECT * FROM order_products WHERE id = #{id}
    </select>

    <!--追加-->
    <insert id="insertOrderProducts" parameterType="com.jp.dataxeed.pm.entity.OrderProductsEntity" useGeneratedKeys="true" keyProperty="id"> 
        INSERT INTO order_products (order_id, product_id, quantity)
        VALUES (#{orderId}, #{productId}, #{quantity})
    </insert>

    <!--更新-->
    <update id="updateOrderProductsById" parameterType="com.jp.dataxeed.pm.entity.OrderProductsEntity">
        UPDATE order_products SET order_id = #{orderId},
                                  product_id = #{productId},
                                  quantity = #{quantity},
                                  updated_at = CURRENT_TIMESTAMP
                              WHERE id = #{id}
    </update>

    <!--削除-->
    <delete id="deleteOrderProductsById" parameterType="int">
        DELETE FROM order_products WHERE id = #{id}
    </delete>

</mapper>
