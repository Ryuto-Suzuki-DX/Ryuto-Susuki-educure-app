<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jp.dataxeed.pm.mapper.PictureMapper">

    <!--全取得-->
    <select id="findAll" resultType="com.jp.dataxeed.pm.entity.PictureEntity">
        SELECT * FROM pictures
    </select>

    <!--単体取得-->
    <select id="findById" parameterType="int" resultType="com.jp.dataxeed.pm.entity.PictureEntity">
        SELECT * FROM pictures WHERE id = #{id}
    </select>

    <!--追加-->
    <insert id="insertPicture" parameterType="com.jp.dataxeed.pm.entity.PictureEntity" useGeneratedKeys="true" keyProperty="id"> 
        INSERT INTO pictures (name, file_type)
        VALUES (#{name}, #{fileType})
    </insert>

    <!--更新-->
    <update id="updatePictureById" parameterType="com.jp.dataxeed.pm.entity.PictureEntity">
        UPDATE pictures SET name = #{name},
                            file_type = #{fileType},
                            updated_at = CURRENT_TIMESTAMP
                        WHERE id = #{id}
    </update>

    <!--削除-->
    <delete id="deletePictureById" parameterType="com.jp.dataxeed.pm.entity.PictureEntity">
        DELETE FROM pictures WHERE id = #{id}
    </delete>
</mapper>
