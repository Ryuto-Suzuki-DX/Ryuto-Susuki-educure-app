<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jp.dataxeed.pm.mapper.OrderPicturesMapper">

    <!--全取得-->
    <select id="findAll" resultType="com.jp.dataxeed.pm.entity.OrderPicturesEntity">
        SELECT * FROM order_pictures
    </select>

    <!--単体取得-->
    <select id="findById" parameterType="int" resultType="com.jp.dataxeed.pm.entity.OrderPicturesEntity">
        SELECT * FROM order_pictures WHERE id = #{id}
    </select>

    <!--追加-->
    <insert id="insertOrderPictures" parameterType="com.jp.dataxeed.pm.entity.OrderPicturesEntity" useGeneratedKeys="true" keyProperty="id"> 
        INSERT INTO order_pictures (order_id, picture_id)
        VALUES (#{orderId}, #{pictureId})
    </insert>

    <!--更新-->
    <update id="updateOrderPictureById" parameterType="com.jp.dataxeed.pm.entity.OrderPicturesEntity">
        UPDATE order_pictures SET order_id = #{orderId},
                                  picture_id = #{pictureId},
                                  updated_at = CURRENT_TIMESTAMP
                              WHERE id = #{id}
    </update>

    <!--削除-->
    <delete id="deleteOrderPictureLogical" parameterType="int">
        DELETE FROM order_pictures WHERE id = #{id}
    </delete>

</mapper>
