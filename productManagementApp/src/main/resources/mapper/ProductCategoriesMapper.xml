<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jp.dataxeed.pm.mapper.ProductCategoriesMapper">

    <!--全取得-->
    <select id="findAll" resultType="com.jp.dataxeed.pm.entity.ProductCategoriesEntity">
        SELECT * FROM product_categories
    </select>

    <!--単体取得-->
    <select id="findById" parameterType="int" resultType="com.jp.dataxeed.pm.entity.ProductCategoriesEntity">
        SELECT * FROM product_categories WHERE id = #{id}
    </select>

    <!--追加-->
    <insert id="insertProductCategories" parameterType="com.jp.dataxeed.pm.entity.ProductCategoriesEntity" useGeneratedKeys="true" keyProperty="id"> 
        INSERT INTO product_categories (product_id, category_id)
        VALUES (#{productId}, #{categoryId})
    </insert>

    <!--更新-->
    <update id="updateProductCategoriesById" parameterType="com.jp.dataxeed.pm.entity.ProductCategoriesEntity">
        UPDATE product_categories SET product_id = #{productId},
                                      category_id = #{categoryId},
                                      updated_at = CURRENT_TIMESTAMP
                                  WHERE id = #{id}
    </update>

    <!--削除-->
    <delete id="deleteProductCategoriesById" parameterType="int">
        DELETE FROM product_categories WHERE id = #{id}
    </delete>

</mapper>
